<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Steganov2.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Steganov2"
	MinHeight="800"
MinWidth="1000">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="3*" />
			<RowDefinition
				Height="*" /> 
		</Grid.RowDefinitions>
		<Border BorderBrush="AliceBlue" BorderThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
			<Image
				Grid.Row="0"
				Name="Cadre" />
		</Border>
		<Grid Grid.Row="1">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1" Orientation="Horizontal" FlowDirection="LeftToRight" Background="Azure" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Button
			Grid.Row="1"
			Width="100"
			Height="50"
			Margin="50"
			Content="Embarquer"
			Click="OpenImage"/>
				<TextBox
			Name="textbox"
			Grid.Row="1"
			Height="100"
			Width="200"
		/>
		<Button
			Grid.Row="1"
			Width="100"
			Height="50"
			Margin="50"
			Content="Encoder"
			Click="SaveImage" />
	
		</StackPanel>
		</Grid>
		
	</Grid>
</Window>