<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Steganov2.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Steganov2">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="3*" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Image
			Grid.Row="0"
			Name="Cadre" />
		<Button
			Grid.Row="1"
			Width="100"
			Height="50"
			Margin="50,50,600,50"
			Content="Ouvrir Photo"
			Click="OpenImage"/>
		<Button
			Grid.Row="1"
			Width="100"
			Height="50"
			Margin="600,50,50,50"
			Content="Encoder Photo"
			Click="SaveImage" />
		<TextBox
			Name="textbox"
			Grid.Row="1"
			Height="100"
			Width="200"
		/>
	</Grid>
</Window>